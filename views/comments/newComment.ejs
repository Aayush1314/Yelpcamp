<%- include("../partials/header")%>
<div class="container">
	<h1 style="text-align: center;">Add New Comment To <%= camp.name %></h1>
	<div style="width: 30%; margin: 20px auto">
		<form action="/campgrounds/<%= camp._id %>/comment" method="POST">
			
			<div class="form-group">
				<input class="form-control" type="text" placeholder="text" name="comment[text]">
			</div>
			
			<div class="form-group" style="text-align: center;">
				<button class="btn btn-md btn-primary btn-block"> SUBMIT	</button>
			</div>
		</form>	
		<div style="text-align: center;">
			<a href="/campgrounds">GO BACK</a>
		</div>
	</div>
	
</div>

<%- include("../partials/footer")%>