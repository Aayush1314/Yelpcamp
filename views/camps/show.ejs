<%- include("../partials/header")   %>
<div class= "container">
	<div class= "row">
		<div class= "col-md-3">
			<h3 class="lead"> YelpCamp</h3>
			<div class= list-group>
				<li class= "active list-group-item" > INFO 1</li>
				<li class= "list-group-item"> INFO 2</li>
				<li class= "list-group-item"> INFO 3</li>
			</div>
		</div>
		<div class= "col-md-9">
			<div class="thumbnail">	
				<img class="img-responsive" src="<%= selectedCamp.img%>">
				<div class="caption">
					
					<h4 class="pull-right">Rate</h4>
					<h4><a><%= selectedCamp.name%></a></h4>
					<p><%= selectedCamp.description%><p>	
					<p>
						<em>Submitted by <%= selectedCamp.user.username %></em>
					</p>
					<% if(currentUser && selectedCamp.user.id.equals(currentUser._id)){ %>
					<a href="/campgrounds/<%= selectedCamp._id %>/edit" class= "btn btn-md btn-warning ">EDIT</a>
					<form id="deleteForm" action="/campgrounds/<%= selectedCamp._id %>?_method=DELETE" method="POST" >
						<button class = "btn btn-md btn-danger">DELETE</button>						
					</form>
					<% } %>
				</div>
			</div>
			<div class= "well">
				<div class="text-right">
					<a href="/campgrounds/<%= selectedCamp._id%>/comment/new" class="btn btn-primary">Add Comment</a>
				</div>
				<hr>
				<div class= "row">
					<div class="col-md-12">
						<% selectedCamp.comments.forEach(function(comment){%>
						<a><%= comment.author.username %></a>
						<span class="pull-right">10 days ago</span>
						<p>
						<%=	 comment.text %>		
						</p>	
						<% }) %>

					</div>
				</div>
			</div>
		</div>
	</div>
	
</div>

<%- include("../partials/footer")   %>