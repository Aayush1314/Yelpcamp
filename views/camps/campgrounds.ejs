<%- include("../partials/header")   %>


<div class="container">
	
	<header class="jumbotron">
		
		<div class="container">
			<h1>LIST OF CAMPGROUNDS</h1>	
			<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a>	
		</div>
		
	</header>	


	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
			<% for (var i=0; i<campgrounds.length ; i++ ){ %>
			<div class="col-md-3" id= "camps">
				<div class="thumbnail">
					<img id= "imageSize" src="<%= campgrounds[i].img %>">
					<div class="caption">
						<h4><%= campgrounds[i].name %></h4 >  
						<a href="/campgrounds/<%= campgrounds[i]._id%>" class="btn btn-primary">More Info</a>
					</div> 
				</div>
			</div>
			<% } %>
		
	</div>
											   
							

</div>
<%- include("../partials/footer")   %>