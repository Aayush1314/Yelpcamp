<%- include("../partials/header")%>
<div class="container">
	<h1 style="text-align: center;">Edit <%= camp.name %></h1>
	<div style="width: 30%; margin: 20px auto">
		<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text"  value="<%= camp.name %>" name="camp[name]">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="camp[img]" value="<%= camp.img %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" value="<%= camp.description %>" name="camp[description]">
			</div>
			<div class="form-group" style="text-align: center;">
				<button class="btn btn-md btn-primary btn-block"> SUBMIT </button>
			</div>
		</form>	
		<div style="text-align: center;">
			<a href="/campgrounds">GO BACK</a>
		</div>
	</div>
	
</div>

<%- include("../partials/footer")%>