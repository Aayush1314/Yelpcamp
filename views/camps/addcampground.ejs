<%- include("../partials/header")%>
<div class="container">
	<h1 style="text-align: center;">ADD NEW CAMPGROUND</h1>
	<div style="width: 30%; margin: 20px auto">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" placeholder="name" name="groundName">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="img URL" name="groundImg">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="About Campground" name="groundDecs">
			</div>
			<div class="form-group" style="text-align: center;">
				<button class="btn btn-md btn-primary btn-block"> SUBMIT	</button>
			</div>
		</form>	
		<div style="text-align: center;">
			<a href="/campgrounds">GO BACK</a>
		</div>
	</div>
	
</div>

<%- include("../partials/footer")%>